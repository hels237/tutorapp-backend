# ==========================================
# EXEMPLE DE VARIABLES D'ENVIRONNEMENT TUTORAPP
# ==========================================
# Copiez ce fichier vers .env et remplissez avec vos vraies valeurs

# Base de données
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tutorapp
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_db_password

# Base de données développement
DB_NAME_DEV=tutorapp_dev
DB_USERNAME_DEV=tutorapp_dev
DB_PASSWORD_DEV=your_dev_password

# JWT Secrets (générez des clés sécurisées)
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_256_bits
JWT_SECRET_DEV=your_dev_jwt_secret
JWT_SECRET_KEY=your_base64_encoded_jwt_key

# Email Configuration
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# OAuth2 Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CLIENT_ID_DEV=your_google_client_id_dev
GOOGLE_CLIENT_SECRET_DEV=your_google_client_secret_dev

# OAuth2 Facebook
FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret
FACEBOOK_CLIENT_ID_DEV=your_facebook_app_id_dev
FACEBOOK_CLIENT_SECRET_DEV=your_facebook_app_secret_dev

# OAuth2 GitHub
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# CORS et URLs
CORS_ALLOWED_ORIGINS=https://tutorapp.com,https://www.tutorapp.com
FRONTEND_URL=http://localhost:3000

# Fichiers
FILE_UPLOAD_DIR=/var/tutorapp/uploads

# Serveur
PORT=8080
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587